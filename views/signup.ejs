<!DOCTYPE html>

<html>
    <head>
        <title>Sign up</title>
        <meta charset="UTF-8">

        <style>
            html, body {
                height: 100%;
                margin: 0;
            }

            body {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

            .field {
                display: flex;
                flex-direction: column;
                margin-bottom: 10px;
            }

            p {
                max-width: 165px;
            }

            label {
                margin-bottom: 2px;
            }

            input {
                margin-bottom: 2px;
            }

            #submit-button {
                margin-left: auto;
                margin-right: auto;
            }

            p {
                color: red;
                margin: 0;
            }
        </style>
    </head>

    <body>
        <h1>Sign up</h1>

        <% function getErrorMessage(fieldName) { %>
            <% if (locals.errorMessages && errorMessages[fieldName] !== undefined) { %>
                <% return errorMessages[fieldName]; %>
            <% } %>
            <% return ""; %>
        <% } %>

        <% // Submit form to current route %>
        <form action="" method="post">
            <div class="field">
                <p><%= getErrorMessage("unavailable") %></p>
                <label for="username">Username</label>
                <input type="text" id="username" name="username">
                <p><%= getErrorMessage("username") %></p>
            </div>

            <div class="field">
                <label for="email">Email</label>
                <input type="text" id="email" name="email">
                <p><%= getErrorMessage("email") %></p>
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
                <p><%= getErrorMessage("password") %></p>
            </div>

            <div class="field">
                <input id="submit-button" type="submit" value="Sign up">
            </div>
        </form>
    </body>
</html>
