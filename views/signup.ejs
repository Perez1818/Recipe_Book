<!DOCTYPE html>

<html>
    <head>
        <title>Sign up</title>
        <meta charset="UTF-8">

        <style>
            html, body {
                height: 100%;
                margin: 0;
            }

            body {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

            .field > * {
                display: block;
            }

            label {
                margin-bottom: 2px;
            }

            input {
                margin-bottom: 10px;
            }

            #submit-button {
                margin-left: auto;
                margin-right: auto;
            }

            .errors {
                color: red;
            }
        </style>
    </head>

    <body>
        <h1>Sign up</h1>

        <% // Submit form to current route %>
        <form action="" method="post">
            <% if (locals.errors) { %>
                <div class="errors">
                    <% for (let error of errors) { %>
                        <p><%= error %></p>
                    <% } %>
                </div>
            <% } %>

            <div class="field">
                <label for="username">Username</label>
                <input type="text" id="username" name="username">

            </div>

            <div class="field">
                <label for="email">Email</label>
                <input type="text" id="email" name="email">
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
            </div>

            <div class="field">
                <input id="submit-button" type="submit" value="Sign up">
            </div>
        </form>
    </body>
</html>
