<!DOCTYPE html>

<html>
    <head>
        <title>Login</title>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/static/css/login.css">
    </head>

    <body>
        <h1>Recipe Book</h1>

        <% function getErrorMessage(fieldName) { %>
            <% if (locals.errorMessages && errorMessages[fieldName] !== undefined) { %>
                <% return errorMessages[fieldName]; %>
            <% } %>
            <% return ""; %>
        <% } %>

        <% // Submit form to current route %>
        <form action="" method="post">
            <div class="field">
                <label for="username">Username or Email</label>
                <input type="text" id="username" name="username">
            </div>

            <div class="field">
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
                <p><%= getErrorMessage("credentials") %></p>
            </div>

            <div class="field">
                <input id="submit-button" type="submit" value="Sign In">
            </div>

            <div class="container"><a href="/signup">No Account? Sign up!</a></div>
        </form>
    </body>
</html>
